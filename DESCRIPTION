Type: Package
Package: IMCLoadR
Title: IMC Loaders and Plots for Seurat v5
Version: 0.0.0.9000
Authors@R: c(
    person(given = "Meredith A.",
           family = "Carpenter",
           role = c("aut","cre"),
           email = "meredith.a.carpenter@gmail.com",
           comment = c(ORCID = "")),
